<% layout('layouts/boilerplate.ejs') %>
<h1>All Hostels</h1>
<div><a href="/hostels/new">Add a new hostel</a></div>
<ul>
  <% for( let hostel of hostels ) { %>

  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img src="<%=hostel.image%>" alt="" class="img-fluid" />
      </div>
      <div class="col-md-8">
        <h4 class="card-title"><%=hostel.name%></h4>
        <p class="card-text"><%=hostel.description%></p>
        <p class="card-text">
          <small class="text-muted"><%=hostel.location%></small>
        </p>
        <a href="/hostels/<%=hostel._id%>" class="btn btn-primary"
          >View a hostel review</a
        >
      </div>
    </div>
  </div>
  <% } %>
</ul>
